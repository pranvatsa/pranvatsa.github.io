---
import DefaultLayout from '../layouts/DefaultLayout.astro';
import Base64Tool from '../components/Base64Tool.vue';
import JsonYamlPrettifier from '../components/JsonYamlPrettifier.vue';
---

<DefaultLayout title="Tools">
  <section class="flex flex-col items-center min-h-screen bg-gradient-to-b from-gray-100 via-gray-200 to-gray-100 dark:bg-gradient-to-b dark:from-gray-800 dark:via-gray-900 dark:to-gray-800">
    <h1 class="text-4xl font-bold my-8 dark:text-gray-200">Tools</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 w-full max-w-4xl p-4">
      <div class="bg-white rounded-lg shadow-md p-6 dark:bg-gray-700 dark:text-gray-200">
        <h2 class="text-2xl font-semibold mb-4">Base64 Encode/Decode</h2>
        <Base64Tool client:load />
      </div>
      <div class="bg-white rounded-lg shadow-md p-6 dark:bg-gray-700 dark:text-gray-200">
        <h2 class="text-2xl font-semibold mb-4">JSON/YAML Prettifier</h2>
        <JsonYamlPrettifier client:load />
      </div>
      <!-- Add more tool cards here -->
    </div>
  </section>
</DefaultLayout>